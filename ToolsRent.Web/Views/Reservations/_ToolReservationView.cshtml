@model ToolsRent.Web.ViewModels.ToolReservationViewModel

@Html.HiddenFor(x => x.ReservationID, new { Value = ViewBag.ReservationID })
@Html.HiddenFor(x => x.ToolID)
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <fieldset class="with-border-light">
            <div class="form-group">
                <label>Broj rezervacije: @ViewBag.ReservationID</label>
            </div>
            <div class="form-group">
                <div class="col-12">
                    <label for="toolType">Tip alata:</label>
                    <select id="toolTypesSelect" class="form-control" style="width: 100%;">
                        <option value="0">Select a tool</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label>Datum od:</label>
                <div class="col-12">
                    @*<input type="date" id="dateFrom" name="dateFrom" onchange="handleDateChange()">*@
                    @Html.TextBoxFor(model => model.DateFrom, new { @class = "date form-control" })
                </div>
            </div>
            <div class="form-group">
                <label>Datum do</label>
                <div class="col-12">
                    @Html.TextBoxFor(model => model.DateTo, new { @class = "date form-control" })
                    @*<input type="date" id="dateTo" name="dateTo" onchange="handleDateChange()">*@
                </div>
            </div>
            <div class="form-group ">
                <label>Cijena alata:</label>
                <div class="col-12">
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    <button class='btn btn-warning btn-space btn-sm'
                            onclick='createToolReservation()'>
                        Rezerviraj
                    </button>
                </div>
            </div>
            <br />
        </fieldset>

    </div>
</div>











